<% layout("/boilerplate.ejs")%>
    <style>
        body {
            display: flex;
            min-height: 100vh;
        }
        .content {
            flex: 1;
        }
        .flight-image {
            width: 100%;
            height: 300px;
            object-fit: cover;
            border-radius: 10px;
        }
        .details-box {
            border: 1px solid #ddd;
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
            width: 800px;
        }
        .details-box h5 {
            color: #007bff;
        }
        .detail{
            display: flex;
            justify-content: center;
        }
        .details-box h5,p{
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }
    </style>
<body>

    <!-- Main Content -->
    <div class="content container mb-5">
        
        <!-- Flight Image -->
        <div class="text-center mb-4 mt-5">
            <img src="https://republicjetcenter.com/wp-content/uploads/2020/04/private-jet-rentals.jpeg" alt="Flight Image" class="flight-image">
        </div>

        <div class="detail">
        <!-- Flight Information Section -->
        <div class="details-box">
            <h5>Flight Information</h5>
            <hr>
            <p>Airline:&nbsp;<%= curflight.airline_company %></p>
            <p>Flight Name:&nbsp;<%= curflight.flightname %></p>
            <p>From:&nbsp; <%= curflight.arrival.from %></p>
            <p>To:&nbsp; <%= curflight.departures.destination %></p>
            <p>Departure Time:&nbsp; <%= curflight.departures.departureTime%></p>
            <p>Arrival Time:&nbsp; <%= curflight.arrival.arrivalTime %></p>
            <h5 style="text-align: center;">staffs : </h5>
            <ul>
            <% for(let x of curflight.staffs) {%>

                <p><%= x.fullname %>  -----> <%= x.role %> </p>
            <% } %>
            </ul>
        </div>

        <!-- Ticket Details Section -->
        <div class="details-box">
            <h5>Ticket Details</h5>
            <hr>
            <p>Ticket Type:&nbsp;  Economy Class</p>
            <p>Price:&nbsp; $<%= curflight.amount %></p>
            <p>Baggage Allowance: &nbsp; 20kg</p>
            <p>Meal Included:&nbsp; Yes</p>
        </div>
    </div>

    <form action="/<%= curflight._id %>/booking" method="get">

        <button class="btn btn-success mt-3">Start booking</button>
    </form>

    </div>
</body>
</html>