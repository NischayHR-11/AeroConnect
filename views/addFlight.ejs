<% layout("/boilerplate.ejs")%>
<body>
   
    <div class="row">
        <div class="col-8 offset-2">
            <br>
            <h3>Add new Flight</h3>
    <form method="post" action="/addFlight" novalidate class="needs-validation">
        <br>
        <div>
            <label for="Airline_company" class="form-label">Airline</label>
            <input type="text" id="Airline_company" placeholder="airline" name="airline_company" class="form-control" required>
            <div class="invalid-feedback">please enter a valid Airline name</div>
        </div>
        <br>
        <div>
            <label for="aircraft" class="form-label">aircraft</label>
            <input type="text" id="aircraft" placeholder="aircraft" name="aircraft" class="form-control" required>
            <div class="invalid-feedback">please enter a valid aircraft Model</div>
        </div>
        <br>
        <div>
            <label for="flight_name" class="form-label">flight name</label>
            <input type="text" id="flight_name" placeholder="flight_name" name="flight_name" class="form-control" required>
            <div class="invalid-feedback">please enter a valid namer</div>
        </div>
        <br>
        <div>
            <label for="amount" class="form-label">Amount</label>
            <input type="number" id="amount" placeholder="1000" name="amount" min="1" class="form-control" required>
            <div class="invalid-feedback">please enter a valid amount</div>
        </div>
        <br>
        <label for="service">Select last service Date</label>
        <input type="date" id="service" name="last_service_date" required>
        <br>
        <br>
        <button class=" btn btn-dark">submit</button>
        <br>
    </form>
</div>
</div>
</body>