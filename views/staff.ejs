<% layout("/boilerplate.ejs")%>
<body>
   
    <div class="row">
        <div class="col-8 offset-2">
            <h3>Add new Staff</h3>
    <form method="post" action="/staff" novalidate class="needs-validation">
        <br>
        <div>
            <label for="FlightName" class="form-label">Flight Name</label>
            <input type="text" id="FlightName" placeholder="FLight Name" name="staff[FlightName]" class="form-control" required>
            <div class="invalid-feedback">please enter a valid name</div>
        </div>
        <div class="mt-3">
            <label for="fullname" class="form-label">Fullname</label>
            <input type="text" id="fullname" placeholder="fullname" name="staff[fullname]" class="form-control" required>
            <div class="invalid-feedback">please enter a valid name</div>
        </div>
        <br>
        <div class="row">
        <div class="col-md-4">
            <label for="email" class="form-label">email</label>
            <input type="text" id="email" placeholder="email" name="staff[email]" class="form-control" required>
            <div class="invalid-feedback">please enter a valid email</div>
        </div>
        <br>
        <div class="col-md-8">
            <label for="phone_number" class="form-label">phone number</label>
            <input type="number" id="phone_number" placeholder="no" name="staff[phone_number]" class="form-control" required>
            <div class="invalid-feedback">please enter a phone number</div>
        </div>
    </div>
        <br>
        <div>
            <label for="Role">Choose a role:</label>
            <select id="Role" name="staff[role]" required>
            <option value="" disabled selected>Select an option</option>
            <option value="Pilot">Pilot</option>
            <option value="Co_Pilot">Co-pilot</option>
            <option value="Ground_Staff">Ground-staff</option>
            <option value="Customer_Support">Customer-support</option>
        </select>
            <div class="invalid-feedback">please enter a valid option</div>
        </div>
        <br>
        <div>
            <label for="working_terminal" class="form-label">working terminal</label>
            <input type="text" id="working_terminal" placeholder="" name="staff[working_terminal]" class="form-control" required>
            <div class="invalid-feedback">please enter a valid terminal</div>
        </div>
        <br>
        <div class="row">
        <div class="col-md-4">
            <label for="shift_start_time" class="form-label">shift start time</label>
            <input type="time" id="shift_start_time" placeholder="" name="staff[shift_start_time]" class="form-control" required>
            <div class="invalid-feedback">please enter a valid time</div>
        </div>
        <br>
        <div class="col-md-8">
            <label for="shift_end_time" class="form-label">shift end time</label>
            <input type="time" id="shift_end_time" placeholder="" name="staff[shift_end_time]" class="form-control" required>
            <div class="invalid-feedback">please enter a valid time</div>
        </div>
    </div>
        <br>
        <button class=" btn btn-dark">submit</button>
        <br><br>
       
    </form>
</div>
</div>
</body>