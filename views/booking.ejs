<% layout("/boilerplate.ejs")%>
<style>
    #main{
        margin-top: 30px;
        display: flex;
        justify-content: center;
    }
</style>
<body>
    <div id="main">
    <div class="row">
        <div class="col-10 offset-2">
            <p></p>
            <h3>Enter the Details</h3>
    <form method="post" action="/<%= id %>/booking" novalidate class="needs-validation">
        <div>
            <label for="fullname" class="form-label">fullname</label>
            <input type="text" id="fullname" placeholder="fullname" name="customer[fullname]" class="form-control" required>
            <div class="invalid-feedback">please enter a valid name</div>
        </div>
        <br>
        <div>
            <label for="dob">Select Date of Birth:</label>
            <input type="date" id="dob" name="customer[dob]" required>
            <div class="invalid-feedback">please enter a valid name</div>
        </div>
        <br>
        <div>
            <label for="email" class="form-label">email</label>
            <input type="text" id="email" placeholder="email" name="customer[email]" class="form-control" required>
            <div class="invalid-feedback">please enter a valid email</div>
        </div>
        
        <br>
        <div class="row">
        <div class="col-md-12">
            <label for="phone_number" class="form-label">phone</label>
            <input type="number" id="phone_number" placeholder="+91 1234567891" name="customer[phone_number]" class="form-control" required>
            <div class="invalid-feedback">please enter a phone number</div>
        </div>
        <br>
        <br>
        <div class="col-md-12">
            <label for="passport" class="form-label">passport Number</label>
            <input type="number" id="passport" placeholder="1234 1234 1234" name="customer[passport]" class="form-control" required>
            <div class="invalid-feedback">please enter a phone number</div>
        </div>
        <br>
        <div>
            <label for="seat_number" class="form-label">Seat Number</label>
            <input type="text" id="seat_number" placeholder="A12" name="customer[seat_number]" class="form-control" required>
            <div class="invalid-feedback">please enter a valid seat number</div>
        </div>
        <br>
    </div>
        <br>
        <button class="btn1">Checkout</button>
        <br><br>
    </form>
</div>
</div>
<img src="https://i.pinimg.com/736x/ef/c2/cb/efc2cb3c5f55dd0fdc00ba720e6bb76e.jpg">
</div>
</body>
