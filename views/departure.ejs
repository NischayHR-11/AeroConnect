<% layout("/boilerplate.ejs")%>
<body>
   
    <div class="row">
        <div class="col-8 offset-2">
            <br>
            <h3>Enter Departure Details</h3>
    <form method="post" action="/<%= id %>/departure" novalidate class="needs-validation">
        <br>
        <div>
            <label for="appt-time">Scheduled Departure:</label>
            <input type="time" id="appt-time" name="scheduledtime" required>
            <div class="invalid-feedback">please enter a valid time</div>
        </div>
        <br>
        <div>
            <label for="appt-time">Departure Time:</label>
            <input type="time" id="appt-time" name="departureTime" required>
            <div class="invalid-feedback">please enter a valid time</div>
        </div>
        <br>
        <div>
            <label for="terminal" class="form-label">Terminal Number</label>
            <input type="text" id="terminal" placeholder="TX2" name="terminal" class="form-control" required>
            <div class="invalid-feedback">please enter a valid terminal</div>
        </div>
        <br>
        <div>
            <label for="from" class="form-label">Destination</label>
            <input type="text" id="from" placeholder="Banglore" name="destination" class="form-control" required>
            <div class="invalid-feedback">please enter a valid terminal</div>
        </div>
        <br>

        <br>
        <button class=" btn btn-dark">submit</button>
        <br>
    </form>
</div>
</div>
</body>